<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="TalkingPaper" namespace="TalkingPaper">
 <class name="TalkingPaper.Mostra, TalkingPaper" table ="Mostra" lazy="false"> 
  <!--  <class name="TalkingPaper.Mostra, TalkingPaper" table ="Mostra" lazy="false">-->
    <id name="IDmostra" column ="IDmostra" type="int" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property name="Nome" column="Nome" type="string" not-null="true" />
    <property name="Autore" column="Autore" type="string" not-null ="true" />
    <property name="Credits" column="Credits" type="string" not-null="false"/>

    <property name="DataInizio" column="DataInizio" type="DateTime" not-null="false" />
     <!--    <property name="DataInizio" column="DataInizio" type="System.DateTime" not-null="false" /> -->
    <bag name ="PosterLista" cascade ="all" lazy="false" inverse="true">
      <key column="Mostra" />
      <one-to-many class ="TalkingPaper.Poster, TalkingPaper"/>
    </bag>
  </class>
</hibernate-mapping>

