<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="TalkingPaper" namespace="TalkingPaper">
  <class name="TalkingPaper.Risorsamultimediale, TalkingPaper" table ="Risorsamultimediale" lazy="true">
    <id name="IDrisorsa" column ="IDrisorsa" type="int" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property name="Nome" column="Nome" type="string" not-null="true" />
    <property name="Path" column="Path" type="string" not-null ="true" />
    <property name="Estensione" column="Estensione" type ="string" not-null="true" />
    <property name="Dimensione" column ="Dimensione" type ="int" not-null ="false" />
    <!-- bag per essere lato N in relazione con Poster -->
    <bag name ="ContenutoLista" cascade ="all" lazy="true" inverse="true">
      <key column="Poster" />
      <one-to-many class ="TalkingPaper.Contenuto, TalkingPaper"/>
    </bag>
    <!-- Bag per essere in relazione N:M con Profilo -->
    <bag name="ProfiloLista" table="risorsa_profilo" cascade="all">
      <key column="ID_risorsa"/>
      <many-to-many column="ID_profilo" class="TalkingPaper.Profilo, TalkingPaper"/>
    </bag>
  </class>
</hibernate-mapping>
