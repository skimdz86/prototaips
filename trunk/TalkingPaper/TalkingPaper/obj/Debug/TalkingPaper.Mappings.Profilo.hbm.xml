<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="TalkingPaper" namespace="TalkingPaper">
  <class name="TalkingPaper.Profilo, TalkingPaper" table ="Profilo" lazy="true">
    <id name="IDprofilo" column ="IDprofilo" type="int" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property name="Descrizione" column="Descrizione" type="string" not-null="true" />
    <property name="Nome" column="Nome" type="string" not-null ="true" />
    <!-- Bag per essere lato N in relazione con Utente , one-to-many -->
    <bag name ="UtenteLista" cascade ="all" lazy="true" inverse="true">
      <key column="Profilo" />
      <one-to-many class ="TalkingPaper.Utente, TalkingPaper"/>
    </bag>
    <!-- Bag per essere in relazione con Risorsamultimediale in N:M, many-to-many -->
    <bag name="RisorsaLista" table="risorsa_profilo" cascade="all">
      <key column="ID_profilo"/>
      <many-to-many column="ID_risorsa" class="TalkingPaper.Risorsamultimediale, TalkingPaper"/>
    </bag>
  </class>
</hibernate-mapping>
