<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="TalkingPaper" namespace="TalkingPaper">

  <class name="TalkingPaper.Poster, TalkingPaper" table ="Poster" lazy="false">
   <!-- <class name="TalkingPaper.Poster, TalkingPaper" table ="Poster" lazy="false">-->
    <id name="IDposter" column ="IDposter" type="int" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property name="Descrizione" column="Descrizione" type="string" not-null="false" />
    <property name="Ordine" column="Ordine" type="int" not-null ="true" />
    <property name="Nome" column="Nome" type="string" not-null="true"/>
    <!-- E' in lato N in relazione con Contenuto -->
    <bag name ="ContenutoLista" cascade ="all" lazy="false" inverse="true">
      <key column="Poster" />
      <one-to-many class ="TalkingPaper.Contenuto, TalkingPaper"/>
    </bag>
    <!-- E' in lato 1 in relazione con Mostra -->
    <many-to-one name="Mostra" column="Mostra" not-null="false" lazy="false" />
  </class>
</hibernate-mapping>
